<%- model_class = Haber -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:baslik) %></th>
      <th><%= model_class.human_attribute_name(:aciklamasi) %></th>
      <th><%= model_class.human_attribute_name(:resim) %></th>
      <th><%= model_class.human_attribute_name(:kaynagi) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @habers.each do |haber| %>
      <tr>
        <td><%= link_to haber.id, haber_path(haber) %></td>
        <td><%= haber.baslik %></td>
        <td><%= haber.aciklamasi %></td>
        <td><%= haber.resim %></td>
        <td><%= haber.kaynagi %></td>
        <td><%=l haber.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_haber_path(haber), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      haber_path(haber),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_haber_path,
            :class => 'btn btn-primary' %>
