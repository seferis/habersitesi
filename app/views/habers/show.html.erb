<%- model_class = Haber -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:baslik) %>:</strong></dt>
  <dd><%= @haber.baslik %></dd>
  <dt><strong><%= model_class.human_attribute_name(:aciklamasi) %>:</strong></dt>
  <dd><%= @haber.aciklamasi %></dd>
  <dt><strong><%= model_class.human_attribute_name(:resim) %>:</strong></dt>
  <dd><%= @haber.resim %></dd>
  <dt><strong><%= model_class.human_attribute_name(:kaynagi) %>:</strong></dt>
  <dd><%= @haber.kaynagi %></dd>
</dl>

<%= link_to t('.back', :default => t("helpers.links.back")),
              habers_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_haber_path(@haber), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              haber_path(@haber),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
